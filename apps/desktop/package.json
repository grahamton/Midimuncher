{
  "name": "@midi-playground/desktop",
  "version": "0.0.0",
  "private": true,
  "type": "commonjs",
  "main": "dist-electron/main.js",
  "files": [
    "dist",
    "dist-electron"
  ],
  "scripts": {
    "dev": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 concurrently -k \"npm run dev:renderer\" \"npm run dev:main\" \"npm run dev:electron\"",
    "dev:renderer": "vite dev --host --port 5173",
    "dev:main": "tsup electron/main.ts electron/preload.ts electron/midiBridge.ts electron/sequencerHost.ts --format cjs --sourcemap --out-dir dist-electron --watch",
    "dev:electron": "wait-on tcp:5173 dist-electron/main.js && node scripts/run-electron.js",
    "build": "npm run build:main && npm run build:renderer",
    "package:beta": "node scripts/package-release.cjs",
    "build:main": "tsup electron/main.ts electron/preload.ts electron/midiBridge.ts electron/sequencerHost.ts --format cjs --sourcemap --out-dir dist-electron",
    "build:renderer": "vite build",
    "lint": "tsc --noEmit -p tsconfig.json && tsc --noEmit -p electron/tsconfig.json",
    "test": "node scripts/run-tests.cjs",
    "smoke:midi": "tsx scripts/midi-smoke.ts",
    "smoke:winrt": "tsx scripts/winrt-smoke.ts",
    "smoke:persist": "tsx scripts/persistence-smoke.ts",
    "smoke:mapping": "tsx scripts/mapping-smoke.ts"
  },
  "dependencies": {
    "@julusian/midi": "^3.2.1",
    "@midi-playground/core": "workspace:*",
    "@midi-playground/ui": "workspace:*",
    "electron": "^32.2.0",
    "lucide-react": "^0.562.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.4.2",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "tsup": "^8.3.5",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "wait-on": "^7.2.0"
  },
  "tsup": {
    "target": "node20",
    "shims": false,
    "splitting": false,
    "noExternal": [
      "@midi-playground/core"
    ],
    "clean": true
  }
}
